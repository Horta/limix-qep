#!/bin/bash

anaconda login
if [ $? -ne 0 ]
then
 exit
fi

conda config --add channels http://conda.anaconda.org/horta

conda build . --no-anaconda-upload
if [ $? -ne 0 ]
then
 exit
fi

filepath=`conda build . --output`
mkdir -p conda-bins
conda convert $filepath -p all -o conda-bins -f

conda_bins=`find conda-bins -type f -name '*.tar.bz2'`
for i in $conda_bins
do
  anaconda upload $i -i
done
